#Function to CALL THE API KEY
def scrape_data_cities():
    url = f'{query_url}?get=NAME,{total_population},{pop_percent_white},{pop_percent_black},{poverty_percent}&for={cities_breakdown}'
    #url = f"{query_url}?get={variable_1},{variable_2}&HISP=2&for=state:26&key={API_key}"
    response = requests.get(url)
    #print (response)
    if response.status_code == 200:
        data = response.json()
        print (data)
        return data
    else:
        print ("Could not access Census data")
        return None

#print (scrape_data_cities())

def scrape_data_counties():
    url = f"{query_url}?get=NAME,{total_population},{pop_percent_white},{pop_percent_black},{poverty_percent}&for={county_breakdown}"
    response = requests.get(url)
    #print (response)
    if response.status_code == 200:
        data = response.json()
        #print (data)
        return data
    else:
        print ("Could not access county data")
        return None
    
def set_up_database(data_name):
    path = os.path.dirname(os.path.abspath(__file__))
    #conn = sqlite3.connect('your_database.db')
    conn = sqlite3.connect(path + "/" + data_name)
    return conn
        
def make_county_table(county_data, cur, conn):
    cur.execute('''CREATE TABLE IF NOT EXISTS MI_counties (id INTEGER PRIMARY KEY, Name TEXT UNIQUE )''')
    id_count = 0
    for item in county_data:
        if county_data.index(item) != 0:
        
            county = item[0].split(",")[0]
            cur.execute('''INSERT INTO MI_counties (id, Name) VALUES (?,?)''', (id_count, county))
            id_count += 1

    conn.commit()

def make_main_table(county_data, city_data, cur, conn):
    cur.execute('''CREATE TABLE IF NOT EXISTS MI_Demographic_Info (id INTEGER PRIMARY KEY, city TEXT, county_id INTEGER,
                population INTEGER, white_population_percentage TEXT, black_population_percentage TEXT, poverty_percentage TEXT)''')
    
    #add cities to the table
    id_count = 0
    for item in city_data:
        if city_data.index(item) != 0:
            city = item[0].split(",")[0]
            print (item[0].split(","))
            county = item[0].split(",")[1].strip()
            cur.execute('''SELECT id FROM MI_counties WHERE Name = ?''',(county,))
            county_id = int(cur.fetchone()[0])
            population = int(item[1])
            white_percentage = item[2] + "%"
            black_percentage = item[3] + "%"
            poverty_percentage = item[4] + "%"

            cur.execute('''INSERT INTO MI_Demographic_Info (id, city, county_id, population, white_population_percentage,
                        black_population_percentage, poverty_percentage) VALUES (?,?,?,?,?,?,?)''', (id_count, city, county_id, population, 
                                                                                                    white_percentage, black_percentage, poverty_percentage))
            id_count += 1
        
    #add counties to the table:
    for item in county_data:
        if county_data.index(item) != 0:
            county = item[0].split(",")[0].strip()
            cur.execute('''SELECT id FROM MI_counties WHERE Name = ?''', (county,))
            county_id = int(cur.fetchone()[0])
            population = int(item[1])
            white_percentage = item[2] + "%"
            black_percentage = item[3] + "%"
            poverty_percentage = item[4] + "%"
            cur.execute('''INSERT INTO MI_Demographic_Info (id, city, county_id, population, white_population_percentage,
                        black_population_percentage, poverty_percentage) VALUES (?,?,?,?,?,?,?)''', (id_count, "NULL", county_id, population, 
                                                                                                    white_percentage, black_percentage, poverty_percentage))
            id_count += 1
        
    conn.commit()









    conn.commit()



#def add_data_to_table(city_data,county_data, cur, conn):









def main():
    city_data = scrape_data_cities()
    county_data = scrape_data_counties()
    if city_data and county_data:
        conn = set_up_database("demographic_info.db")
        cur = conn.cursor()
        print("Data stored successfully!")
        make_county_table(county_data, cur, conn)
        make_main_table(county_data, city_data, cur, conn)


if __name__ == "__main__":
    main()
    unittest.main(verbosity=2)